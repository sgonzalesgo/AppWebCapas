<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjectWebMaterialize</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- lib css materialize -->
    <link rel="stylesheet" href="~/lib/materialize/css/materialize.min.css" />

    <!-- icons materialize -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <link rel="stylesheet" href="~/ProjectWebMaterialize.styles.css" asp-append-version="true" />
</head>
<body>
    <header>

        <ul id="slide-out" class="sidenav sidenav-fixed">
            <li>
                <div class="user-view">
                    <div class="background">
                        <img class="responsive-img" src="images/best-background.png">
                    </div>
                    <a href="#user"><img class="circle" src="images/people.png"></a>
                    <a href="#name"><span class="white-text name">Salvador Gonzalez Gomez</span></a>
                    <a href="#email"><span class="white-text email">sgg.2020@gmail.com</span></a>
                </div>
            </li>
            <li><a href="#!"><i class="material-icons">cloud</i>First Link With Icon</a></li>
            <li><a href="#!">Second Link</a></li>
            <li><div class="divider"></div></li>
            <li><a class="subheader">Subheader</a></li>
            <li><a class="waves-effect" href="#!">Third Link With Waves</a></li>
        </ul>
        <a href="#" data-target="slide-out" class="sidenav-trigger hhide-on-large-only"><i class="material-icons ">menu</i></a>

    </header>
    <main>
        @RenderBody()
    </main>

    <footer class="page-footer teal accent-4">
        <div class="footer-copyright">
            <div class="container">
                © 2014 Copyright Text
                <a class="grey-text text-lighten-4 right" href="#!">More Links</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- lib JS materialize -->
    <script src="~/lib/materialize/js/materialize.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>